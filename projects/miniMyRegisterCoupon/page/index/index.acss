.container{
    width: 100vw;
    min-height: 100vh;
    background-color: #fff;
}

.img{
    width: 750rpx;
    height: 500rpx;
}

.opt-box{
  margin-top: 40rpx;
  text-align: center;
}

.text{
    font-size:13px;
    width: 70%;
    margin:60rpx auto 20rpx;
    color:#999;
    text-align: center
}
.download{
    color:#111;
}
.opt-box .input, .opt-box .btn {
  width: 600rpx;
  height: 106rpx;
  outline: none;
  line-height: 106rpx;
  box-sizing: border-box;
  border: none;
  font-size: 16px;

}
.input{
    background-color: transparent;
    text-align: left;
    padding: 0 30rpx;
}
.half{
  width: 300rpx !important;
}
.pos{
                background-color: #f3f3f3;
                width: 600rpx;
                height: 106rpx;
                position: relative;
                margin:32rpx auto;
                text-align: left;
              }
              
            .text{
              font-size: 14px;
              width: 70%;
              margin:100rpx auto;
              text-align: center
            }
.get{
  background-color: transparent;
                color:#333;
                position: absolute;
                width: 50%;
                line-height: 48rpx;
                height: 48rpx;
                box-sizing: border-box;
                text-align: center;
                top:29rpx;
                font-size: 15px;
                right:0;
              
                z-index: 10;
}

.btn {
    margin:0 auto;
    color:#fff;
  font-size: 17px;
  border-color: #f81131;
  text-align: center;
  background: #f81131 linear-gradient(to right, #f81131, #f91557);
}

.btn:active {
  transition: transform 100ms;
  transform: scale(0.99);
}

.rules{
  margin:60rpx 105rpx 60rpx 135rpx;
  font-size: 12px;
  text-align: left;
  line-height: 36rpx;
  color:#999;
  padding-bottom: 60rpx;
}
.rules .rule{
  margin:16rpx 0;
}
.rules .index{
  text-align: center;
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  margin-top:3rpx;
  margin-left: -36rpx;
  margin-right: 6rpx;
}
.rules .title{
  text-align: center;
  font-size: 15px;
  color:#333;
  height: auto;
  margin:40rpx auto 20rpx;
}
.footer {
  width: 100%;
  height: 44rpx;
  margin:30rpx 0;
  background: url("data:image/png;base64,") no-repeat center;
  background-size: auto 80%;
}